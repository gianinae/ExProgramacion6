@page
@model WebApplicationCore.Pages.Puestos.GridPuestosModel
@{
}
<div class="container">
    <div class="card">
        <div class="card-header">
            Puestos
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Nombre</td>
                                <td>Salario</td>
                                <td>Estado</td>
                                <td>Acción</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.Id_Puesto</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Salario</td>
                                    <td>@(item.Estado ? "Activo":"Inactivo")</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.Id_Puesto">
                                            <i class='bx bxs-edit'></i>
                                        </a>

                                        <button type="button" class="btn btn-primary"
                                                onclick="GridPuestos.OnClickEliminar(@item.Id_Puesto)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Puestos/GridPuestos.js"></script>
}